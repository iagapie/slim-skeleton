{
    "name": "iagapie/slim-skeleton",
    "description": "Slim 4 Skeleton Application",
    "keywords": [
        "slim",
        "slim-skeleton",
        "psr7",
        "php7",
        "microframework"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Agapie",
            "email": "igoragapie@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-xml": "*",
        "doctrine/migrations": "^3.0",
        "monolog/monolog": "^2.1",
        "slim/psr7": "^1.2",
        "slim/slim": "^4.5",
        "symfony/config": "^5.1",
        "symfony/console": "^5.1",
        "symfony/dependency-injection": "^5.1",
        "symfony/dotenv": "^5.1",
        "symfony/yaml": "^5.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "fzaninotto/faker": "^1.9",
        "mikey179/vfsstream": "^1.6"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S localhost:8888 -t public",
        "test": "phpunit"
    }
}
